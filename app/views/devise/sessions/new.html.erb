<% provide(:title, "Login") %>
<div class="reg-back">
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="logo">Instagram</h2>
      <div class="field">
          <%= f.text_field :login, :placeholder => 'Username or email', class: :in_field, required: :required %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: :in_field, required: :required, :minlength=>"6" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: :submit %>
      </div>
    <% end %>
  </div>

  <div class="sub-form">
    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
</div>
