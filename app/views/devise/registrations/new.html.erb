<% provide(:title, "Register") %>
<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class="logo">Instagram</h2>

    <div class="field">

      <%= f.text_field :first_name, :placeholder => 'First Name', class: :in_field, :required=> "required" %>
    </div>

    <div class="field">

      <%= f.text_field :surname, :placeholder => 'Last Name', class: :in_field, :required=> "required" %>
    </div>

    <div class="field">

      <%= f.text_field :username, :placeholder => 'Username', class: :in_field, :required=> "required" %>
    </div>

    <div class="field">

      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'example@email.com', class: :in_field, :required=> "required" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: :in_field, :required=> "required" %>
      <% if @minimum_password_length %>
      <div class="min">(<%= @minimum_password_length %> characters minimum)</div>
      <% end %>
    </div>

    <div class="field">

      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirmation', class: :in_field, :required=> "required" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: [:submit, :register ]%>
    </div>
  <% end %>
</div>
<div class="sub-form">
  Have an account? <%= link_to "Log in", new_session_path(resource_name) %>
</div>
