<% provide(:title, "Users") %>
<div class="follows-list">
  <h2>Users</h2>


      <% @users.each do |user|  %>
      <div class="f-user-box">
        <div class="f-avatar-box">
          <% if !user.avatar.file.nil? %>
            <%= link_to (image_tag user.avatar.main.url, class: :avatar), user_path(user)  %>
          <% else %>
            <%= link_to (image_tag "user.png", class: :avatar), user_path(user)  %>
          <% end %>
        </div>

        <div class="f-details-box">
          <%= link_to user_path(user) do %>
            <p id="username"><%= user.username %></p>
            <p id="name"><%= "#{user.first_name} #{user.surname}" %></p>
          <% end %>
        </div>

        <% if current_user != user %>
          <div class="f-follow-box" id="follower_<%= user.id %>">
            <% if current_user.following.include?(user) %>
              <%= render "partials/hun_following_form", user: user %>
            <% else  %>
              <%= render "partials/hfollowing_form", user: user %>
            <% end %>
          </div>
        <% end %>

      </div>
    <% end %>

</div>
